import java.util.Scanner;

public class Circle {
	
	//yarı çapını kullanıcıdan aldığınız dairenin alanını
	//ve çevresini hesaplayan programı yazın.

	public static void main(String[] args) {
		
		double radius,pi,area,perimeter,a,sliceArea;
		pi=3.14;
		
		Scanner input = new Scanner (System.in);
		
		System.out.println("Enter the radius of circle: ");
		radius = input.nextDouble();
		
		area=pi*radius*radius;
		perimeter=2*pi*radius;
		
		System.out.println("Area of the circle: " + area + "\nPerimeter of the circle: " + perimeter );
		
		System.out.println("Enter the measure of the central angle: " );
		a=input.nextDouble();
		sliceArea=(pi*(radius*radius)*a)/360;
		System.out.println(sliceArea);
		
	}

}
